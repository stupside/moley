---
import type { IconProps } from "./constants";
import { iconMap, sizeStyles } from "./constants";

export interface Props extends IconProps {}

const { name, size = "md", class: className = "", ...props } = Astro.props;

const IconComponent = iconMap[name];

const iconClasses = `${sizeStyles[size]} ${className}`.trim();
---

{IconComponent && <IconComponent class={iconClasses} {...props} />}