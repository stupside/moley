---
import type { InfoBoxBlock } from "../../../types/content.js";
import { mergeClassName, cn } from "../../../utils/classes.js";
import { containerStyles, containerTitleStyles } from "./shared.js";
import ContentRenderer from "../../ContentRenderer.astro";

export interface Props {
	content: InfoBoxBlock;
}

const { content } = Astro.props;
const style = content.style && content.style in containerStyles ? content.style : "info";
---

<div class={mergeClassName(`${containerStyles[style]} border rounded-xl p-6 shadow-sm`, content.className)} id={content.id}>
  <div class="flex flex-col gap-3">
    {content.title && (
      <h4 class={cn("font-semibold text-base", containerTitleStyles[style])}>{content.title}</h4>
    )}
    {content.children?.map(child => (
      <ContentRenderer content={child} />
    ))}
  </div>
</div>