---
import type { ListItemBlock } from "../../../types/content.js";
import { mergeClassName } from "../../../utils/classes.js";
import ContentRenderer from "../../ContentRenderer.astro";

export interface Props {
	content: ListItemBlock;
}

const { content } = Astro.props;
---

<li class={mergeClassName("leading-relaxed", content.className)} id={content.id}>
  {content.text}
  {content.children?.map(child => (
    <ContentRenderer content={child} />
  ))}
</li>