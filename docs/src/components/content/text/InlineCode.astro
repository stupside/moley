---
import type { InlineCodeBlock } from "../../../types/content.js";
import { mergeClassName } from "../../../utils/classes.js";

export interface Props {
	content: InlineCodeBlock;
}

const { content } = Astro.props;
---

<code
  class={mergeClassName("inline px-2 py-1 bg-gray-100 text-gray-700 rounded-md text-sm font-mono border border-gray-200", content.className)}
  id={content.id}
>
  {content.code}
</code>