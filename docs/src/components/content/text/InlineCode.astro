---
import type { InlineCodeBlock } from "../../../types/content.js";

export interface Props {
	content: InlineCodeBlock;
}

const { content } = Astro.props;
---

<code
  class={`inline px-1 py-0.5 bg-gray-100 text-gray-800 rounded text-sm font-mono ${content.className || ''}`}
  id={content.id}
>
  {content.code}
</code>