---
/**
 * Modern Hero component using atomic design
 */

import { layoutClasses } from "../layout/shared.js";
import { mergeClassName } from "../../utils/classes.js";

// Inlined simple components to avoid over-engineering

export interface Badge {
  text: string;
}

export interface Logo {
  src: string;
  alt: string;
  width?: number;
  height?: number;
}

export interface Props {
  logo: Logo;
  title: string;
  titleAccent: string;
  subtitle: string;
  badges?: Badge[];
  class?: string;
}

const {
  title,
  titleAccent,
  subtitle,
  logo,
  badges = [],
  class: className = "",
} = Astro.props;
---

<section
  class={mergeClassName("bg-gradient-to-br from-white to-gray-50/50 py-16 sm:py-20 relative overflow-hidden", className)}
>
  <div class={layoutClasses.container}>
    <div class="text-center">
      <div class="flex flex-col items-center gap-8">
        <img
          alt={logo.alt}
          src={`${import.meta.env.BASE_URL}${logo.src}`}
          width={logo.width}
          height={logo.height}
          class="mx-auto"
        />

        <h1 class="text-4xl sm:text-5xl lg:text-6xl text-gray-900 font-bold tracking-tight">
          {title}
          <span class="bg-gradient-to-r from-orange-600 to-orange-500 bg-clip-text text-transparent">{titleAccent}</span>
        </h1>

        <p class="text-xl mx-auto max-w-3xl text-gray-600 leading-relaxed">
          {subtitle}
        </p>

        {badges.length > 0 && (
          <div class="flex flex-wrap justify-center gap-3 text-sm font-medium">
            {badges.map((badge) => (
              <span class="inline-flex items-center rounded-full bg-orange-50 px-3 py-1 text-orange-700 ring-1 ring-orange-600/20">
                {badge.text}
              </span>
            ))}
          </div>
        )}

        <slot />
      </div>
    </div>
  </div>
</section>
